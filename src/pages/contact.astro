---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";

const pageTitle =
    "Contact Us | The Little Haven Ladies Hostel in Kochi";
const pageDescription =
    "Get in touch with The Little Haven, a leading ladies hostel in Kochi. Contact us for room availability, bookings, and inquiries about our women's hostel near Kalamassery.";
---

<Layout title={pageTitle} description={pageDescription}>
    <div
        class="font-sans text-slate-800 antialiased min-h-screen bg-gradient-to-br from-[#f7f7f7] to-[#ffd6a5]"
    >
        <main
            id="main-content"
            class="container mx-auto px-6 py-16 md:py-20 lg:py-24"
        >
            <!-- Hero Section -->
            <section
                class="text-center max-w-4xl mx-auto mb-24 md:mb-32 animate-on-scroll"
            >
                <h1
                    class="font-bold text-4xl md:text-6xl lg:text-7xl text-slate-900 mb-6 leading-tight tracking-tight"
                >
                    Get in Touch with <span
                        class="bg-gradient-to-r from-[#ff6b6b] to-[#4ecdc4] bg-clip-text text-transparent"
                        >The Little Haven</span
                    > ‚Äì Ladies Hostel in Kochi
                </h1>
                <p
                    class="text-lg md:text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed"
                >
                    Looking for a safe and homely ladies hostel near Kalamassery
                    Metro Station? We're here to answer your questions and help
                    you find the right accommodation. Whether you're a student
                    or working professional, our women's hostel in Kochi offers
                    comfort, convenience, and security.
                </p>
            </section>

            <!-- Contact Cards Section -->
            <section class="mb-24 md:mb-32">
                <div class="text-center mb-16">
                    <h2
                        class="font-bold text-3xl md:text-5xl text-slate-900 mb-4 animate-on-scroll"
                    >
                        Contact Details
                    </h2>
                    <div
                        class="w-24 h-1 bg-gradient-to-r from-pink-400 to-teal-400 mx-auto rounded-full"
                    ></div>
                </div>

                <div
                    class="grid grid-cols-1 lg:grid-cols-3 gap-8 max-w-6xl mx-auto"
                >
                    <!-- Phone Card -->
                    <div
                        class="bg-white backdrop-blur-[10px] border border-white/20 p-8 rounded-2xl shadow-lg transition-all duration-300 hover:-translate-y-0.5 hover:shadow-xl animate-on-scroll"
                        style="transition-delay: 100ms;"
                    >
                        <div
                            class="w-12 h-12 bg-gradient-to-br from-[#ff6b6b] to-[#ffd6a5] rounded-xl flex items-center justify-center text-white text-xl mb-6"
                        >
                            üì±
                        </div>
                        <h3 class="font-bold text-2xl text-slate-900 mb-6">
                            Phone Numbers
                        </h3>
                        <div class="space-y-4">
                            <a
                                href="tel:+919895011185"
                                class="flex items-center group text-lg text-slate-700 transition-all duration-200 hover:text-pink-500 focus-visible:outline-none focus-visible:ring-4 focus-visible:ring-[#4ecdc4]/30 rounded-lg p-2 -m-2"
                            >
                                <span
                                    class="font-semibold group-hover:scale-105 transition-transform"
                                    >+91 98950 11185</span
                                >
                            </a>
                            <a
                                href="tel:+919895353234"
                                class="flex items-center group text-lg text-slate-700 transition-all duration-200 hover:text-pink-500 focus-visible:outline-none focus-visible:ring-4 focus-visible:ring-[#4ecdc4]/30 rounded-lg p-2 -m-2"
                            >
                                <span
                                    class="font-semibold group-hover:scale-105 transition-transform"
                                    >+91 98953 53234</span
                                >
                            </a>
                        </div>
                    </div>

                    <!-- Email Card -->
                    <div
                        class="bg-white backdrop-blur-[10px] border border-white/20 p-8 rounded-2xl shadow-lg transition-all duration-300 hover:-translate-y-0.5 hover:shadow-xl animate-on-scroll"
                        style="transition-delay: 200ms;"
                    >
                        <div
                            class="w-12 h-12 bg-gradient-to-br from-[#ff6b6b] to-[#ffd6a5] rounded-xl flex items-center justify-center text-white text-xl mb-6"
                        >
                            üìß
                        </div>
