---
import FeatureCard from "./FeatureCard.astro";
import HomeHero from "./HomeHero.astro";

const features = [
    {
        title: "Well-maintained, tidy rooms and ample corridors",
        icon: {
            path: "M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z",
            colorClass: "text-[#FF6B6B]",
            bgClass: "bg-[#FF6B6B]/10",
        },
    },
    {
        title: "Nutritious meals (mainly non-vegetarian) with breakfast, lunch, dinner and even evening snacks",
        icon: {
            path: "M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z",
            colorClass: "text-[#FFD6A5]",
            bgClass: "bg-[#FFD6A5]/15",
        },
        className: "sm:col-span-2 lg:col-span-1",
    },
    {
        title: "Study-friendly environment with dedicated study spaces",
        icon: {
            path: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z",
            colorClass: "text-[#4ECDC4]",
            bgClass: "bg-[#4ECDC4]/10",
        },
    },
    {
        title: "Washing machines & seperate washing and drying area",
        icon: {
            path: "M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z",
            colorClass: "text-[#4ECDC4]",
            bgClass: "bg-[#4ECDC4]/10",
        },
    },
    {
        title: "Clothes drying and ironing facilities",
        icon: {
            path: "M10 2L3 7v11a1 1 0 001 1h12a1 1 0 001-1V7l-7-5zM6 9a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1z",
            colorClass: "text-[#FF6B6B]",
            bgClass: "bg-[#FF6B6B]/10",
        },
        className: "sm:col-span-2 lg:col-span-1",
    },
    {
        title: "Regular housekeeping and hygienic surroundings",
        icon: {
            path: "M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z",
            colorClass: "text-[#4ECDC4]",
            bgClass: "bg-[#4ECDC4]/10",
        },
        className: "sm:col-span-2 lg:col-span-1",
    },
];
---

<div class="bg-gray-50 text-slate-800 font-sans leading-relaxed antialiased">
    <main class="min-h-screen">
        <!-- Hero Section -->
        <div class="-mt-16">
            <HomeHero />
        </div>

        <!-- Introduction Section -->
        <section class="py-20 lg:py-28 bg-white animate-on-scroll">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
                    <div class="space-y-8">
                        <div class="space-y-6">
                            <h2
                                class="text-3xl sm:text-4xl lg:text-5xl font-bold text-slate-900 tracking-tight text-balance"
                            >
                                Your Home Away From Home
                            </h2>
                            <div
                                class="w-16 h-1.5 bg-gradient-to-r from-coral-400 to-teal-400 rounded-full"
                            >
                            </div>
                        </div>

                        <div
                            class="space-y-4 text-lg text-slate-600 leading-relaxed"
                        >
                            <p>
                                Looking for a safe, comfortable, and affordable
                                ladies hostel in Kochi or specifically a ladies
                                hostel near Kalamassery Metro Station, you’ve
                                come to the right place. Since 2004, we’ve
                                provided reliable accommodation tailored for
                                students and working women seeking a peaceful,
                                homely environment.
                            </p>
                            <p>
                                Our location is a key advantage, just 200 meters
                                from National Highway and a short walk away
                                from the Kalamassery Municipal Office and Cochin
                                University Metro Station. At The Little Haven,
                                we prioritize accessibility, comfort, and
                                quality service for all our residents, making us
                                one of the most trusted ladies hostels in
                                Ernakulam.
                            </p>
                        </div>

                        <div
                            class="flex items-center gap-5 bg-gradient-to-r from-coral-50 to-teal-50 p-5 sm:p-6 rounded-2xl"
                        >
                            <div
                                class="flex items-center justify-center w-14 h-14 bg-coral-500/10 rounded-2xl"
                            >
                                <svg
                                    class="w-7 h-7 text-coral-600"
                                    fill="currentColor"
                                    viewBox="0 0 20 20"
                                >
                                    <path
                                        fill-rule="evenodd"
                                        d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
                                        clip-rule="evenodd"></path>
                                </svg>
                            </div>
                            <div>
                                <div class="font-bold text-xl text-slate-900">
                                    Trusted Since 2004
                                </div>
                                <div class="text-slate-600">
                                    20+ years of excellence
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="relative">
                        <div
                            class="relative overflow-hidden rounded-3xl shadow-2xl shadow-slate-900/10"
                        >
                            <img
                                src="/cozy_interior.jpg"
                                alt="Cozy hostel room interior"
                                class="w-full h-full"
                            />
                        </div>
                        <div
                            class="absolute -bottom-6 -left-6 sm:-bottom-8 sm:-left-8 bg-gradient-to-br from-teal-500 to-teal-600 text-white p-5 sm:p-6 rounded-2xl shadow-2xl shadow-teal-500/25"
                        >
                            <div class="text-3xl font-bold">36</div>
                            <div class="text-sm opacity-90 font-medium">
                                Residents
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Why Choose Section -->
        <section
            id="amenities"
            class="py-20 lg:py-28 bg-gradient-to-br from-slate-50/50 via-teal-50/30 to-peach-50/40"
        >
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="text-center mb-12 sm:mb-16">
                    <h2
                        class="text-3xl sm:text-4xl lg:text-5xl font-bold text-slate-900 mb-4 sm:mb-6 tracking-tight text-balance"
                    >
                        Why Choose The Little Haven?
                    </h2>
                    <div
                        class="w-20 h-1.5 bg-gradient-to-r from-coral-400 to-teal-400 mx-auto rounded-full mb-4"
                    >
                    </div>
                    <p
                        class="text-lg sm:text-xl text-slate-600 max-w-3xl mx-auto text-pretty"
                    >
                        Experience comfort, safety, and community in our
                        thoughtfully designed spaces
                    </p>
                </div>

                <div
                    class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8"
                    role="list"
                >
                    {
                        features.map((feature) => (
                            <FeatureCard
                                title={feature.title}
                                icon={feature.icon}
                                class={`animate-on-scroll ${feature.className ?? ""}`}
                            />
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Mission Statement -->
        <section class="py-20 lg:py-28 bg-white animate-on-scroll">
            <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
                <div
                    class="relative bg-gradient-to-br from-slate-50/80 via-coral-50/40 to-teal-50/60 p-8 sm:p-12 lg:p-16 rounded-3xl lg:rounded-[2rem] shadow-2xl shadow-slate-900/10 border border-white/50"
                >
                    <!-- Decorative elements -->
                    <div
                        class="absolute top-8 right-8 w-24 h-24 bg-gradient-to-br from-coral-400/10 to-teal-400/10 rounded-full blur-xl"
                    >
                    </div>
                    <div
                        class="absolute bottom-8 left-8 w-32 h-32 bg-gradient-to-br from-teal-400/10 to-peach-400/10 rounded-full blur-xl"
                    >
                    </div>

                    <div class="relative text-center">
                        <h2
                            class="text-3xl sm:text-4xl font-bold text-slate-900 mb-6 sm:mb-8 tracking-tight text-balance"
                        >
                            Our Promise to You
                        </h2>
                        <p
                            class="text-lg sm:text-xl lg:text-2xl text-slate-700 mb-8 sm:mb-10 text-pretty leading-relaxed font-light max-w-4xl mx-auto"
                        >
                            The focus at The Little Haven is comfort, community,
                            and safety—the ideal women’s hostel in Kalamassery
                            for college students and working professionals
                            living in and around the city.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Location & Contact -->
        <section
            id="contact"
            class="py-20 lg:py-28 bg-gradient-to-br from-slate-50 to-gray-100/80 animate-on-scroll"
        >
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="grid lg:grid-cols-2 gap-12 lg:gap-20">
                    <div class="space-y-8">
                        <div>
                            <h2
                                class="text-3xl sm:text-4xl lg:text-5xl font-bold text-slate-900 mb-4 sm:mb-6 tracking-tight text-balance"
                            >
                                Prime Location
                            </h2>
                            <div
                                class="w-16 h-1.5 bg-gradient-to-r from-coral-400 to-teal-400 rounded-full"
                            >
                            </div>
                        </div>

                        <div class="space-y-6">
                            <div
                                class="flex items-start gap-4 sm:gap-5 p-5 sm:p-6 bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg shadow-slate-900/5 border border-white/50"
                            >
                                <div
                                    class="flex items-center justify-center w-12 h-12 bg-teal-500/10 rounded-xl mt-1"
                                >
                                    <svg
                                        class="w-6 h-6 text-teal-600"
                                        fill="currentColor"
                                        viewBox="0 0 20 20"
                                    >
                                        <path
                                            fill-rule="evenodd"
                                            d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                                            clip-rule="evenodd"></path>
                                    </svg>
                                </div>
                                <div>
                                    <h3
                                        class="font-bold text-xl text-slate-900 mb-2"
                                    >
                                        Just 200m from National Highway
                                    </h3>
                                    <p
                                        class="text-slate-600 text-base sm:text-lg leading-relaxed"
                                    >
                                        Easy access to major transportation
                                        routes
                                    </p>
                                </div>
                            </div>

                            <div
                                class="flex items-start gap-4 sm:gap-5 p-5 sm:p-6 bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg shadow-slate-900/5 border border-white/50"
                            >
                                <div
                                    class="flex-shrink-0 flex items-center justify-center w-12 h-12 bg-coral-500/10 rounded-xl mt-1"
                                >
                                    <svg
                                        class="w-6 h-6 text-coral-600"
                                        fill="currentColor"
                                        viewBox="0 0 20 20"
                                    >
                                        <path
                                            d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"
                                        ></path>
                                    </svg>
                                </div>
                                <div>
                                    <h3
                                        class="font-bold text-xl text-slate-900 mb-2"
                                    >
                                        Walking Distance
                                    </h3>
                                    <p
                                        class="text-slate-600 text-base sm:text-lg leading-relaxed"
                                    >
                                        From Kalamassery Municipal Office & Cochin
                                        University Metro Station
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="relative">
                        <div
                            class="relative overflow-hidden rounded-3xl shadow-2xl shadow-slate-900/15"
                        >
                            <iframe
                                class="w-full h-[350px] sm:h-[400px] border-0"
                                loading="lazy"
                                allowfullscreen
                                referrerpolicy="no-referrer-when-downgrade"
                                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3928.546059111816!2d76.3126331!3d10.044864!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3b080dcb702f8183%3A0xdfd24d457a2629b3!2sThe%20Little%20Haven%20Ladies%20Hostel!5e0!3m2!1sen!2sus!4v1716391841947!5m2!1sen!2sus"
                                title="Location of The Little Haven Ladies Hostel on Google Maps"
                            ></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section
            class="py-20 bg-[#ff6b6b] text-white"
        >
            <div class="container mx-auto px-4 text-center">
                <h2 class="text-3xl lg:text-4xl font-bold mb-6">
                    Book Your Place at Kochi’s Trusted Women’s Hostel
                </h2>
                <p class="text-xl mb-8 opacity-90 max-w-2xl mx-auto">
                    Discover why we’re one of the most trusted ladies hostels in
                    Kochi and the preferred women’s hostel near Kalamassery
                    Metro Station for students and professionals. Safe,
                    affordable, and welcoming...we’ve been providing comfort and
                    community since 2004.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a
                        href="/contact"
                        class="bg-white text-black px-8 py-4 rounded-full font-semibold text-lg hover:bg-gray-100 transition-all duration-300 transform hover:scale-105"
                    >
                        Contact Us Today
                    </a>
                </div>
            </div>
        </section>
    </main>

    <style>
        @theme {
            --color-coral-50: #fef7f7;
            --color-coral-100: #fee2e2;
            --color-coral-400: #ff6b6b;
            --color-coral-500: #ff6b6b;
            --color-coral-600: #e55656;
            --color-peach-50: #fffbf5;
            --color-peach-100: #fff4e6;
            --color-peach-400: #ffcc80;
            --color-peach-500: #ffd6a5;
            --color-peach-600: #e6c195;
            --color-teal-50: #f0fdfa;
            --color-teal-100: #ccfbf1;
            --color-teal-400: #4ecdc4;
            --color-teal-500: #4ecdc4;
            --color-teal-600: #45b8b0;
        }
    </style>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const heroSection = document.getElementById("hero-section");
            const video = document.getElementById(
                "hero-video",
            ) as HTMLVideoElement;

            if (!heroSection || !video) return;

            const observer = new IntersectionObserver(
                (entries) => {
                    entries.forEach((entry) => {
                        if (entry.isIntersecting) {
                            video
                                .play()
                                .catch((error) =>
                                    console.error("Video play failed:", error),
                                );
                        } else {
                            video.pause();
                        }
                    });
                },
                { threshold: 0.5 }, // Pause when less than 50% is visible
            );
            observer.observe(heroSection);
        });
    </script>
</div>
