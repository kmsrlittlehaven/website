        </svg>
        Start Chat
        <svg class="size-4 text-white/80 transition-transform duration-200 group-hover:translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
        </svg>
      </a>
    </div>
  </div>
</aside>

<style>
  /* Custom animations for better performance */
  @keyframes fade-in-delayed {
    from {
      opacity: 0;
      transform: scale(0.8) translateY(10px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }
  
  @keyframes notification-pulse {
    0%, 100% {
      transform: scale(1);
      opacity: 1;
    }
    50% {
      transform: scale(1.1);
      opacity: 0.8;
    }
  }
  
  .animate-fade-in-delayed {
    opacity: 0;
    animation: fade-in-delayed 0.6s ease-out 5s forwards;
  }
  
  .animate-notification-pulse {
    animation: notification-pulse 2s ease-in-out infinite;
  }
  
  /* Popup states */
  #whatsapp-popup.show {
    opacity: 1;
    transform: scale(1) translateY(0);
    pointer-events: auto;
  }
  
  /* Focus management for accessibility */
  #whatsapp-popup:focus-within {
    outline: none;
  }
  
  /* Smooth transitions for all interactive elements */
  button, a {
    transition-property: all;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  /* Enhanced mobile responsiveness */
  @media (max-width: 480px) {
    #whatsapp-popup {
      right: -0.5rem;
      width: calc(100vw - 2rem);
      max-width: none;
    }
  }
</style>

<script>
  // Modern, efficient JavaScript with better error handling
  class WhatsAppWidget {
    private elements: {
      container: HTMLElement | null;
      toggle: HTMLButtonElement | null;
      popup: HTMLElement | null;
      closeBtn: HTMLButtonElement | null;
      badge: HTMLElement | null;
    };
    
    private isOpen: boolean = false;

    constructor() {
      this.elements = {
        container: document.getElementById('whatsapp-widget'),
        toggle: document.getElementById('whatsapp-toggle') as HTMLButtonElement,
        popup: document.getElementById('whatsapp-popup'),
        closeBtn: document.getElementById('close-popup') as HTMLButtonElement,
        badge: document.getElementById('notification-badge')
      };
      
      this.init();
    }

    private init(): void {
      this.bindEvents();
      this.setupAccessibility();
    }

    private bindEvents(): void {
      // Toggle popup
      this.elements.toggle?.addEventListener('click', this.togglePopup.bind(this));
      
      // Close popup
      this.elements.closeBtn?.addEventListener('click', this.closePopup.bind(this));
      
      // Close on outside click
      document.addEventListener('click', this.handleOutsideClick.bind(this));
      
      // Keyboard navigation
      document.addEventListener('keydown', this.handleKeydown.bind(this));
    }

    private setupAccessibility(): void {
      // Focus management for screen readers
      this.elements.popup?.setAttribute('tabindex', '-1');
    }

    private togglePopup(): void {
      if (this.isOpen) {
        this.closePopup();
      } else {
        this.openPopup();
      }
    }

    private openPopup(): void {
      if (!this.elements.popup || !this.elements.toggle) return;
      
      this.isOpen = true;
      this.elements.popup.classList.add('show');
      this.elements.toggle.setAttribute('aria-expanded', 'true');
      
      // Focus management
      setTimeout(() => {
        this.elements.popup?.focus();
      }, 150);
    }

    private closePopup(): void {
      if (!this.elements.popup || !this.elements.toggle) return;
      
      this.isOpen = false;
      this.elements.popup.classList.remove('show');
      this.elements.toggle.setAttribute('aria-expanded', 'false');
      
      // Return focus to toggle button
      this.elements.toggle.focus();
    }

    private handleOutsideClick(event: MouseEvent): void {
      if (!this.isOpen || !this.elements.container) return;
      
      const target = event.target as Node;
      if (!this.elements.container.contains(target)) {
        this.closePopup();
      }
    }

    private handleKeydown(event: KeyboardEvent): void {
      if (!this.isOpen) return;
      
      if (event.key === 'Escape') {
        this.closePopup();
        event.preventDefault();
      }
    }
  }

  // Initialize when DOM is ready
  document.addEventListener('DOMContentLoaded', () => {
    new WhatsAppWidget();
  });
</script>