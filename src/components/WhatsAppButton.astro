    class="absolute bottom-16 right-0 w-80 max-w-[calc(100vw-3rem)] bg-white rounded-2xl shadow-2xl border border-gray-100 opacity-0 scale-95 translate-y-2 transition-all duration-200 ease-out pointer-events-none"
    id="whatsapp-popup"
    role="dialog"
    aria-labelledby="chat-title"
    aria-describedby="chat-description"
    tabindex="-1"
  >
    <!-- Header -->
    <header class="flex items-center justify-between p-5 border-b border-gray-100">
